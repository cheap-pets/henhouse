{
  "root": true,
  "parser": "@babel/eslint-parser",
  "extends": [
    "standard",
    "plugin:node/recommended",
    "plugin:security/recommended"
  ],
  "plugins": [
    "node",
    "security"
  ],
  "env": {
    "commonjs": true,
    "node": true
  },
  "rules": {
    "prefer-const": 2,
    "complexity": [ 1, 10],
    "max-len": [
      1,
      {
        "code": 120,
        "tabWidth": 2,
        "ignoreUrls": true,
        "ignoreStrings": false,
        "ignoreComments": true,
        "ignoreRegExpLiterals": true,
        "ignoreTrailingComments": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "security/detect-object-injection": 0
  }
}
